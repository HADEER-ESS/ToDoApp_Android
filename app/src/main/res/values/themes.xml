<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/main_color</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp" />

<!-- Background Application color   -->
    <style name="app_background">
        <item name="android:background">@color/light_mode_background</item>
    </style>

<!--    Bottom App Bar background-->
    <style name="bottom_app_bar_background">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Define a custom shape appearance for the FAB -->
    <style name="CustomShapeAppearance" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% makes it circular -->
        <item name="strokeColor">@color/white</item>
    </style>

<!--    floating botton style-->
    <style name="floating_button">
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="shapeAppearance">@style/CustomShapeAppearance</item>
        <item name="borderWidth">4dp</item>
        <item name="tint">@color/white</item>
        <item name="elevation">5dp</item>
    </style>

<!--    Text Application Style-->
    <style name="app_title_bold_22Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    
<!--    Add Task Fragment title-->
    <style name="text_18_bold_title">
        <item name="android:textColor">@color/add_task_title</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_18_regular_title">
        <item name="android:textColor">@color/setting_title</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    Task Title Style-->
    <style name="text_18_bold_blue">
        <item name="textFillColor">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    Setting Title Spinner -->
    <style name="setting_title_spinner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/setting_title</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

<!--    Spinner Item Style-->
    <style name="spinner_text_style">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

<!--    Input placeholder editText style-->
    <style name="Text_20_regular_black">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/add_task_title</item>
    </style>
</resources>