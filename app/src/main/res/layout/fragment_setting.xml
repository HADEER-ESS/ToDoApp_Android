<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".appstack.SettingFragment"
    >
<!--tools:showIn="@layout/activity_main"-->
    <TextView
        android:id="@+id/setting_language_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language_title"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/setting_title_spinner"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="25dp"
        />

    <Spinner
        android:id="@+id/language_selected_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_language_title_tv"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/spinner_container"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:spinnerMode="dialog"
        />

    <TextView
        android:id="@+id/setting_mode_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mode_title"
        app:layout_constraintTop_toBottomOf="@id/language_selected_spinner"
        style="@style/setting_title_spinner"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="19dp"
        />

    <Spinner
        android:id="@+id/mode_selected_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_mode_title_tv"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/spinner_container"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:spinnerMode="dialog"
        />
</androidx.constraintlayout.widget.ConstraintLayout>